<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <!-- CSS -->
  <link rel="stylesheet" href="/css/styles.css">
  <!-- JQuery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <!-- Source Code -->
  <script type="text/javascript" src="/js/calcpayout.js"></script>
  <!-- Bootstrap Functionality -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


  <title>Tip Calculator</title>
</head>

<body class="bg-dark">
  <div class="container-fluid">
    <a href="/moneyentry">Back to money entry form</a>
  </div>

  <div class="container-fluid pt-3">
    <div class="row row-cols-2">
      <div class="col text-center">
        <a class="btn btn-success" href="/addpartner" type="button" name="button">Add New Partner</a>
      </div>
      <div class="col text-center">
        <a class="btn btn-success" href="/deletepartner" type="button" name="button" id="deleteButton">Delete Partner</a>
      </div>
    </div>
  </div>

  <div class="container-fluid pt-5">
    <div class="row row-cols-3">
      <div class="col">
        <h4 id="moneyDisplay"></h4>
      </div>
      <div class="col">
        <h4 id="hoursDisplay">0 hours</h4>
      </div>
      <div class="col">
        <h4 id="dollarPerHourDisplay">$0/hr</h4>
      </div>
    </div>
  </div>

  <hr>

  <div class="container-fluid h-100 d-flex justify-content-center entry">
    <div class="row row-cols-2 justify-content-center">
      <span id="partnerListEJS" hidden><%= JSON.stringify(partnerList); %></span>

      <table class="table table-dark table-sm" id="hoursEntryTable">
        <table>
          <div class="col-4 align-self-center">
            <button class="btn btn-lg btn-success" type="button" name="button" onClick="postData()">Calculate Payout</button>
          </div>

            <a href="/results" id="hiddenLink" hidden></a>

    </div>
  </div>
</body>

</html>
